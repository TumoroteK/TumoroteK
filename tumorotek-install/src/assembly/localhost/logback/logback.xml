        <appender-ref ref="DailyRollingFile"/>
    </logger>

    <logger name="fr.aphp.tumorotek.webapp" additivity="false" level="DEBUG">
        <appender-ref ref="DailyRollingFile"/>
    </logger>

    <logger name="fr.aphp.tumorotek.action" additivity="false" level="DEBUG">
        <appender-ref ref="DailyRollingFile"/>
    </logger> -->
	
	<!-- pour tracer les requêtes avec les paramètres -->
	<logger name="org.hibernate.type" additivity="false" level="ERROR">
        <appender-ref ref="DailyRollingFile"/>
    </logger>
	<logger name="org.hibernate" additivity="false" level="ERROR">
        <appender-ref ref="DailyRollingFile"/>
    </logger>


    <logger name="org.apache.camel" additivity="false" level="ERROR">
        <appender-ref ref="DailyRollingFile"/>
    </logger>

   	<!-- !!!!!!!!!!!!!!!!! loggers pour les interfaçages : DEBUT !!!!!!!!!!!!!!! -->
    <logger name="fr.aphp.tumorotek.interfacage" level="ERROR">
        <appender-ref ref="DailyRollingFile-interfacage"/>
    </logger>

    <logger name="fr.aphp.tumorotek.interfacage.scan" level="ERROR">
        <appender-ref ref="DailyRollingFile-scan"/>
    </logger>

    <logger name="fr.aphp.tumorotek.interfacage.sgl" level="ERROR">
        <appender-ref ref="DailyRollingFile-sgl"/>
    </logger>

    <logger name="fr.aphp.tumorotek.interfacage.sender.ack" level="ERROR">
        <appender-ref ref="DailyRollingFile-ack"/>
    </logger>
   	<!-- !!!!!!!!!!!!!!!!! loggers pour les interfaçages : DEBUT !!!!!!!!!!!!!!! -->


    <root level="ERROR">
        <appender-ref ref="DailyRollingFile"/>
    </root>
</configuration>