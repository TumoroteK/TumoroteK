<?component name="referents" macroURI="/zuls/patient/MedecinsReferents.zul" ?>
<?component name="incaPopUps" macroURI="/zuls/patient/incaPopUpsPatient.zul" inline="true" ?>
<?component name="ficheAnnotationInline" macroURI="/zuls/annotation/FicheAnnotationInline.zul" ?>

<window id="fwinPatientEditBTO" border="none" apply="fr.aphp.tumorotek.action.patient.bto.FichePatientEditBTO">

    <panel id="winPanel" title="${c:l('fichePatient.panel.title')}"
           sclass="fichePanelv2" closable="true">
        <panelchildren id="panelChildrenWithScroll">
            <grid id="formGrid" fixedLayout="true" sclass="gridForm1"
                  hflex="1">
                <columns>
                    <column/>
                    <column/>
                    <column/>
                    <column/>
                    <column/>
                    <column/>
                </columns>
                <rows>
                    <!-- Nip patient -->
                    <row>

                        <label value="${c:l('Champ.Patient.NCristal')}" sclass="formLabel"/>
                        <textbox id="nipBox"
                                 value="@{fwinPatientEditBTO$composer.object.nip save-when='validate.onClick, create.onClick'}"
                                 width="100px"
                                 constraint="@{fwinPatientEditBTO$composer.codeNullConstraint}"/>
                        <label id="ndaFieldLabel" value="${c:l('Champ.Patient.NUCL')}"
                               sclass="formLabel"/>
                        <textbox id="ndaBox" width="100px"
                        />

                        <checkbox id="isUCLBox" label="${c:l('general.UCL')}">
                            <attribute name="onCheck">
                                if(isUCLBox.isChecked()) {
                                nomBox.setConstraint("");
                                prenomBox.setConstraint("");
                                nomRequired.setVisible(false);
                                prenomRequired.setVisible(false);

                                }
                                else {
                                nomBox.setConstraint("no empty");
                                prenomBox.setConstraint("no empty");
                                nomRequired.setVisible(true);
                                prenomRequired.setVisible(true);

                                }
                            </attribute>
                        </checkbox>
                    </row>
                    <row>
                        <!-- Nom -->
                        <hbox>
                            <label value="${c:l('Champ.Patient.Nom')}" sclass="formLabel"/>
                            <label id="nomRequired" value="*" sclass="requiredMark"/>

                        </hbox>
                        <textbox id="nomBox"
                                 value="@{fwinPatientEditBTO$composer.object.nom, save-when='validate.onClick, create.onClick'}"
                                 width="100px" constraint="no empty"
                        />

                        <!-- Nom naissance-->
                        <label value="${c:l('Champ.Patient.NomNaissance')}" sclass="formLabel"/>
                        <textbox id="nomNaisBox" value="@{fwinPatientEditBTO$composer.object.nomNaissance,
			        								 save-when='validate.onClick, create.onClick'}"
                                 width="100px"
                                 constraint="@{fwinPatientEditBTO$composer.nomNullConstraint}"/>
                    </row>
                    <row>
                        <!-- Prenom -->
                        <hbox>
                            <label value="${c:l('Champ.Patient.Prenom')}" sclass="formLabel"/>
                            <label id="prenomRequired" value="*" sclass="requiredMark"/>

                        </hbox>
                        <textbox id="prenomBox" value="@{fwinPatientEditBTO$composer.object.prenom,
		        								 save-when='validate.onClick, create.onClick'}"
                                 width="100px" constraint="no empty"
                        />
                        <!-- Sexe -->
                        <hbox>
                            <box orient="horizontal" pack="center">
                                <label value="${c:l('Champ.Patient.Sexe')}" sclass="incaLabel"/>
                                <image src="/images/icones/codif-export.png"
                                       visible="${sessionScope.catalogues['INCa'] != null}"
                                       tooltip="inca4" style="cursor: pointer"/>
                            </box>
                            <label id="sexeRequired" value="*" sclass="requiredMark"/>
                        </hbox>
                        <listbox id="sexeBox" mold="select" rows="1"
                                 model="@{fwinPatientEditBTO$composer.sexes}"
                                 selectedItem="@{fwinPatientEditBTO$composer.selectedSexe}">
                            <listitem self="@{each='sex'}" value="@{sex.code}">
                                <listcell label="@{sex.label}"/>
                            </listitem>
                        </listbox>
                    </row>

					<!-- Groupe sanguin passé en annotations -->
<!--                     <row id="groupeSanguinRow" visible="false"> -->
<!--                         Groupe Sanguin -->
<!--                         <hbox> -->
<!--                             <box orient="horizontal" pack="center"> -->
<!--                                 <label value="${c:l('Champ.Patient.GroupeSanguin')}" sclass="incaLabel"/> -->
<!--                             </box> -->
<!--                         </hbox> -->
<!--                         <listbox id="groupeSanguinBox" mold="select" rows="1" -->
<!--                                  model="@{fwinPatientEditBTO$composer.groupeSanguin}"> -->
<!--                             <listitem self="@{each='groupeSanguin'}" value="@{groupeSanguin}"> -->
<!--                                 <listcell label="@{groupeSanguin}"/> -->
<!--                             </listitem> -->
<!--                         </listbox> -->
<!--                     </row> -->

                    <row spans="1,3">
                        <!-- Date de naissance -->
                        <hbox>
                            <box orient="horizontal" pack="center">
                                <label value="${c:l('Champ.Patient.DateNaissance')}" sclass="incaLabel"/>
                                <image src="/images/icones/codif-export.png"
                                       visible="${sessionScope.catalogues['INCa'] != null}"
                                       tooltip="inca3" style="cursor: pointer"/>
                            </box>
                            <label id="dateNaissanceRequired" value="*" sclass="requiredMark"/>
                        </hbox>
                        <datebox id="dateNaisBox" format="${c:l('validation.date.format.simple')}"
                                 value="@{fwinPatientEditBTO$composer.object.dateNaissance,
							save-when='validate.onClick, create.onClick'}"
                                 constraint="no empty" lenient="false"/>
                    </row>

                    <row>
                        <!-- Etat patient -->
                        <hbox>
                            <box orient="horizontal" pack="center">
                                <label value="${c:l('Champ.Patient.TypeDonner')}" sclass="incaLabel"/>
                                <image src="/images/icones/codif-export.png"
                                       visible="${sessionScope.catalogues['INCa'] != null}"
                                       tooltip="inca5" style="cursor: pointer"/>
                            </box>
                            <label id="etatRequired" value="*" sclass="requiredMark"/>
                        </hbox>
                        <listbox id="etatBox" mold="select" rows="1" multiple="false"
                                 model="@{fwinPatientEditBTO$composer.etats load-after='sexeBox.onSelect'}"
                                 selectedItem="@{fwinPatientEditBTO$composer.selectedEtat}">

                            <listitem self="@{each='etat'}" value="etat.code">
                                <listcell label="@{etat.label}"/>
                            </listitem>

                        </listbox>
                        <!-- Date de l'etat/décès -->
                        <box orient="horizontal" pack="center" visible="false">
                            <label id="dateEtatDecesField" sclass="incaLabel" value="${c:l('Champ.Patient.DateEtat')}"/>
                            <image src="/images/icones/codif-export.png"
                                   visible="${sessionScope.catalogues['INCa'] != null}"
                                   tooltip="inca6" style="cursor: pointer"/>
                        </box>
                        <datebox id="dateEtatDecesBox" format="${c:l('validation.date.format.simple')}"
                                 value="@{fwinPatientEditBTO$composer.dateEtatDeces,
								save-when='validate.onClick, create.onClick'}" lenient="false" visible="false"/>
                    </row>

                    <row visible="false">
                        <!-- Pays de naissance -->
                        <label value="${c:l('Champ.Patient.PaysNaissance')}" sclass="formLabel"/>
                        <textbox id="paysNaisBox" value="@{fwinPatientEditBTO$composer.object.paysNaissance,
		        								 save-when='validate.onClick, create.onClick'}"
                                 width="100px"
                                 constraint="@{fwinPatientEditBTO$composer.villePaysConstraint}"/>
                        <!-- Ville de naissance -->
                        <label value="${c:l('Champ.Patient.VilleNaissance')}" sclass="formLabel"/>
                        <textbox id="villeNaisBox" value="@{fwinPatientEditBTO$composer.object.villeNaissance,
			        								 save-when='validate.onClick, create.onClick'}"
                                 width="100px"
                                 constraint="@{fwinPatientEditBTO$composer.villePaysConstraint}"/>
                    </row>


                    <!-- 					Validation -->

                    <!-- 					<group  -->
                    <!-- 						label="${c:l('fichePatient.validatePatient')}" -->
                    <!-- 						id="validationPatient" style="border-bottom-width : 0px;" /> -->

                    <!-- 					<row> -->


                    <!-- 							<label value="${c:l('general.validateDonneur')}" sclass="formLabel"/> -->
                    <!-- 							<checkbox id="validatePatientBox" label=""/> -->


                    <!-- 					</row> -->

                    <!-- Annotation inline -->
                    <row spans="4" style="background-color: blue">
                        <ficheAnnotationInline id="ficheTissuInlineAnnoPatient" hflex="1"/>
                    </row>
                    <!-- Referents -->
                    <group id="referentsGroup" visible="false"
                           label="@{fwinPatientEditBTO$composer.referentsGroupHeader load-after='onRefreshHeader'}"
                           style="border-bottom-width : 0px;"/>
                    <row spans="4" visible="false">
                        <div id="referentsDiv">
                            <referents id="referents"/>
                        </div>
                    </row>
                </rows>
            </grid>
        </panelchildren>
        <toolbar height="100%" id="toolbar" align="end">
            <hbox spacing="5">
                <button id="validate" label="${c:l('general.validate')}" height="24px"
                        image="/images/icones/save.png" sclass="buttonv2"/>
                <button id="revert" label="${c:l('general.cancel')}" height="24px"
                        image="/images/icones/cancel.png" sclass="buttonv2"/>
                <button id="create" label="${c:l('general.create')}" height="24px"
                        image="/images/icones/save.png" sclass="buttonv2"/>
                <button id="cancel" label="${c:l('general.cancel')}" height="24px"
                        image="/images/icones/cancel.png" sclass="buttonv2"/>
            </hbox>
        </toolbar>
    </panel>

    <!-- include Catalogues popups -->
    <incaPopUps/>
</window>