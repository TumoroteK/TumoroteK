<?component name="calendarbox" macroURI="/zuls/component/CalendarBox.zul" class="fr.aphp.tumorotek.component.CalendarBox" ?>
<?component name="ficheAnnotationInline" macroURI="/zuls/annotation/FicheAnnotationInline.zul" ?>

<window id="fwinPrelevementEditBTO" border="none"
        apply="fr.aphp.tumorotek.action.prelevement.bto.FichePrelevementEditBTO">
    <panel collapsible="false" title="${c:l('fichePrelevement.panel.title')}"
           sclass="fichePanelv2" id="winPanel" closable="true">
        <panelchildren style="overflow-y:scroll" id="panelChildrenWithScroll">
            <grid fixedLayout="true" sclass="gridForm1" id="gridFormPrlvt">
                <columns>
                    <column width="150px"/>
                    <column/>
                    <column width="150px"/>
                    <column/>
                </columns>
                <rows>
                    <row>
                        <!-- Code du prélèvement -->
                        <hbox widths=",50%">
                            <box orient="horizontal" widths=",50%" pack="center">
                                <label value="${c:l('Champ.Prelevement.IdGreffon')}" sclass="incaLabel"/>
                                <image src="/images/icones/codif-export.png"
                                       visible="${sessionScope.catalogues['INCa'] != null}"
                                       tooltip="inca14" style="cursor: pointer"/>
                            </box>
                            <label value="*" sclass="requiredMark"/>
                        </hbox>
                        <hlayout sclass="z-valign-middle">
                            <textbox id="codeBoxPrlvt"
                                     value="@{fwinPrelevementEditBTO$composer.object.code,
			        			save-when='validate.onClick, create.onClick, next.onClick'
			        			load-after='numerotation.onClick'}"
                                     width="150px"
                                     constraint="${fwinPrelevementEditBTO$composer.codeConstraint}"/>
                            <button id="numerotation"
                                    image="/images/icones/numerotation.png" sclass="buttonv2"
                                    visible="false"/>
                            <button id="interfacage"
                                    image="/images/icones/wizard.png" sclass="buttonv2"
                                    visible="false"/>
                        </hlayout>

                        <!-- Numéro Labo du prélèvement -->
                        <label value="${c:l('Champ.Prelevement.NumeroLaboBTO')}" sclass="formLabel"/>
                        <textbox id="numLaboBoxPrlvt"
                                 value="@{fwinPrelevementEditBTO$composer.object.numeroLabo,
		        			save-when='validate.onClick, create.onClick, next.onClick'}"
                                 width="150px"
                                 constraint="${fwinPrelevementEditBTO$composer.codeNullConstraint}"/>
                    </row>

                    <row spans="1,3">
                        <!-- Nature du prélèvement -->
                        <hbox>
                            <label value="${c:l('Champ.Prelevement.Nature')}" sclass="formLabel"/>
                            <label value="*" sclass="requiredMark"/>
                        </hbox>
                        <listbox id="naturesBoxPrlvt" mold="select" rows="1" width="150px"
                                 model="@{fwinPrelevementEditBTO$composer.natures}"
                                 selectedItem="@{fwinPrelevementEditBTO$composer.selectedNature}">
                            <listitem self="@{each='naturePrlvt'}" value="@{naturePrlvt}">
                                <listcell label="@{naturePrlvt.nature}"/>
                            </listitem>
                        </listbox>
                        <!--<zscript>
                            <![CDATA[
                                String[] data = new String[5];
                                for(int j=0; j < data.length; ++j) {
                                    data[j] = "option "+j;
                                }
                                ListModel strset = new SimpleListModel(data);
                            ]]>
                        </zscript>-->
                        <!--<radiogroup id="naturesRadPrlvt"/>-->
                        <!--<radiogroup id="naturesRadPrlvt">
                            <radio id="teteFemoralRadio"
                                   label="${c:l('Champ.Prelevement.TeteFemorale')}"
                                   radiogroup="naturesRadPrlvt"/>
                            <radio id="autreTissuRadio"
                                   label="${c:l('Champ.Prelevement.AutreTissu')}"
                                   radiogroup="naturesRadPrlvt"/>
                            <attribute name="onCheck">
                                naturesBox.setLabel(self.getSelectedItem().getLabel());
                                naturesBox.setValue(self.getSelectedItem().getLabel());
                                naturesBoxPrlvt.setSelectedItem(naturesBox);
                            </attribute>
                        </radiogroup>-->
                        <!--listbox id="naturesBoxPrlvt" style="visibility: hidden;"
                                 selectedItem="@{fwinPrelevementEditBTO$composer.selectedNature}">

                            <listitem id="naturesBox">

                                <listcell label=""/>
                            </listitem>
                        </listbox-->
                    </row>
                    <!-- Annotation inline -->
                    <row spans="4" style="background-color: blue">
                        <ficheAnnotationInline id="ficheTissuInlineAnnoPrelevement" hflex="1" />
                    </row>
                    <!-- Resume patient -->
                    <group label="${c:l('bloc.prelevement.patient')}" id="groupPatient"/>
                    <row>
                        <label value="${c:l('Champ.Patient.Nip')}" sclass="formLabel"/>
                        <label id="nipLabel" sclass="formValue"/>
                        <!-- nda patient -->
                        <label value="${c:l('Champ.Prelevement.PatientNda')}" sclass="formLabel"/>
                        <textbox id="ndaBox" width="100px" visible="false"
                                 constraint="${fwinPrelevementEditBTO$composer.ndaConstraint}"/>
                    </row>
                    <row>
                        <!-- Nom -->
                        <label value="${c:l('Champ.Patient.Nom')}" sclass="formLabel"/>
                        <label id="linkPatientLabel" sclass="formLink"/>
                        <!-- Prenom -->
                        <label value="${c:l('Champ.Patient.Prenom')}" sclass="formLabel"/>
                        <label id="prenomLabel" sclass="formValue"/>
                    </row>
                    <row>
                        <!-- Date de naissance -->
                        <box orient="horizontal" widths=",50%" pack="center">
                            <label value="${c:l('Champ.Patient.DateNaissance')}" sclass="formLabel"/>
                            <image src="/images/icones/codif-export.png"
                                   visible="${sessionScope.catalogues['INCa'] != null}"
                                   tooltip="inca3" style="cursor: pointer"/>
                        </box>
                        <label id="dateNaisLabel" sclass="formValue"/>
                        <!-- Sexe -->
                        <box orient="horizontal" widths=",50%" pack="center">
                            <label value="${c:l('Champ.Patient.Sexe')}" sclass="formLabel"/>
                            <image src="/images/icones/codif-export.png"
                                   visible="${sessionScope.catalogues['INCa'] != null}"
                                   tooltip="inca4" style="cursor: pointer"/>
                        </box>
                        <label id="sexeLabel" sclass="formValue"/>
                    </row>
                    <!-- Maladie -->
                    <row visible="false" spans="4" id="linkMaladie" style="border-top-style: solid;
															border-top-color: #6ca1e6; 
															border-top-width: 1px">
                        <separator/>
                    </row>
                    <row visible="false">
                        <!-- Libelle -->
                        <label value="${c:l('Champ.Maladie.Libelle')}" sclass="formLabel"/>
                        <label id="linkMaladieLabel" sclass="formLink"/>
                        <!-- Code -->
                        <box orient="horizontal" widths=",50%" pack="center">
                            <label value="${c:l('Champ.Maladie.Code')}" sclass="formLabel"/>
                            <image src="/images/icones/codif-export.png"
                                   visible="${sessionScope.catalogues['INCa'] != null}"
                                   tooltip="inca7" style="cursor: pointer"/>
                        </box>
                        <label id="codeDiagLabel" sclass="formValue"/>
                    </row>
                    <row spans="4">
                        <div id="refPatientDiv"/>
                    </row>

                    <!-- Validation Donneur-->
                    <group visible="false"
                           label="${c:l('fichePatient.validatePatient')}"
                           id="validationPatient"/>
                    <row visible="false">
                        <label value="${c:l('general.validateDonneur')}" sclass="formLabel"/>
                        <checkbox id="validatePatientBox" label=""/>
                    </row>
                    <row spans="4">
                        <separator/>
                    </row>
                    <group label="${c:l('bloc.prelevement.informations.prelevement')}" id="groupPrlvt"/>
                    <row>
                        <!-- date du prélèvement -->
                        <box orient="horizontal" widths=",50%" pack="center">
                            <label value="${c:l('Champ.Prelevement.DatePrelevement')}" sclass="incaLabel"/>
                            <!-- <label value="*" sclass="requiredMark"/> -->
                            <image src="/images/icones/codif-export.png"
                                   visible="${sessionScope.catalogues['INCa'] != null}"
                                   tooltip="inca15" style="cursor: pointer"/>
                        </box>
                        <calendarbox id="datePrelCalBox" value="@{fwinPrelevementEditBTO$composer.object.datePrelevement,
			        			save-when='validate.onClick, create.onClick, next.onClick, self.onBlur'}">

                        </calendarbox>

                        <!-- date du peremption -->
                        <box orient="horizontal" widths=",50%" pack="center">
                            <label value="${c:l('Champ.Prelevement.DatePeremption')}" sclass="incaLabel"/>
                        </box>
                        <calendarbox id="datePeremptionCalBox" value="@{fwinPrelevementEditBTO$composer.object.datePeremption,
			        			save-when='validate.onClick, create.onClick, next.onClick, self.onBlur'}"/>

                    </row>
                    <row visible="false">
                        <!-- constraint="no empty" -->
                        <!-- Mode du prélèvement -->
                        <box orient="horizontal" widths=",50%" pack="center">
                            <label value="${c:l('Champ.Prelevement.PrelevementType')}" sclass="incaLabel"/>
                            <image src="/images/icones/codif-export.png"
                                   visible="${sessionScope.catalogues['INCa'] != null}"
                                   tooltip="inca16" style="cursor: pointer"/>
                        </box>
                        <listbox id="modesBoxPrlvt" mold="select" rows="1" width="150px"
                                 model="@{fwinPrelevementEditBTO$composer.modes}"
                                 selectedItem="@{fwinPrelevementEditBTO$composer.selectedMode}">
                            <listitem self="@{each='modePrlvt'}" value="@{modePrlvt}">
                                <listcell label="@{modePrlvt.type}"/>
                            </listitem>
                        </listbox>
                    </row>
                    <row visible="false">
                        <!-- Sterile -->
                        <label value="${c:l('general.sterile')}" sclass="formLabel"/>
                        <checkbox id="sterileBoxPrlvt" label=""
                                  checked="@{fwinPrelevementEditBTO$composer.object.sterile
								save-when='validate.onClick, create.onClick, next.onClick'}"/>
                        <!-- Risques -->
                        <label value="${c:l('Champ.Prelevement.Risque')}" sclass="formLabel"/>
                        <listbox id="risquesBox" mold="select" multiple="true" rows="4" width="150px"
                                 model="@{fwinPrelevementEditBTO$composer.risques}">
                            <listitem self="@{each='risque'}" value="@{risque.nom}">
                                <listcell label="@{risque.nom}"/>
                            </listitem>
                        </listbox>
                    </row>
                    <row spans="1,3">
                        <!-- établissement du prélèvement -->
                        <label value="${c:l('prelevement.etablissement.filtre')}" sclass="formLabel"
                               id="etabEditLabelPrlvt"/>

                        <listbox id="etabsBoxPrlvt" mold="select" rows="1"
                                 model="@{fwinPrelevementEditBTO$composer.etablissements}"
                                 selectedItem="@{fwinPrelevementEditBTO$composer.selectedEtablissement}">
                            <listitem self="@{each='etablissement'}" value="@{etablissement}">
                                <listcell label="@{etablissement.nom}"/>
                            </listitem>
                        </listbox>
                    </row>
                    <row spans="1,3">
                        <!-- service du prélèvement -->
                        <label value="${c:l('Champ.Prelevement.ServicePreleveur')}" sclass="formLabel"/>
                        <hlayout spacing="10px">
                            <listbox id="servicesBoxPrlvt" mold="select" rows="1">
                                <listitem self="@{each='service'}" value="@{service}">
                                    <listcell label="@{service.nom}"/>
                                </listitem>
                            </listbox>
                            <space/>
                            <label id="operateurAideSaisieServ" style="font-weight:bold;"
                                   value="${c:l('laboInter.operateur.aideSaisie')}"
                                   sclass="formLink"/>
                        </hlayout>
                    </row>
                    <row spans="1,3">
                        <!-- Préleveur du prélèvement -->
                        <label value="${c:l('Champ.Prelevement.Preleveur')}" sclass="formLabel"/>
                        <hlayout spacing="10px">
                            <listbox id="collaborateursBoxPrlvt" mold="select" rows="1">
                                <listitem self="@{each='collaborateur'}" value="@{collaborateur}">
                                    <listcell label="@{collaborateur.nomAndPrenom}"/>
                                </listitem>
                            </listbox>
                            <space/>
                            <label id="operateurAideSaisiePrel" style="font-weight:bold;"
                                   value="${c:l('laboInter.operateur.aideSaisie')}"
                                   sclass="formLink"
                            />
                        </hlayout>
                    </row>

                    <!-- Conditionnenemt -->
                    <row spans="4" visible="false">
                        <vlayout>
                            <label value="${c:l('fichePrelevement.group.conditionnement')}" sclass="formSubTitle"/>
                            <image width="100%" height="1px" src="/images/pixelble.gif"
                                   style="background-repeat: repeat-x;"/>
                        </vlayout>
                    </row>
                    <row visible="false">
                        <!-- type de conditionnement -->
                        <label value="${c:l('Champ.Prelevement.ConditType')}" sclass="formLabel"/>
                        <listbox id="conditTypesBoxPrlvt" mold="select" rows="1" width="150px"
                                 model="@{fwinPrelevementEditBTO$composer.conditTypes}"
                                 selectedItem="@{fwinPrelevementEditBTO$composer.selectedConditType}">
                            <listitem self="@{each='conditTypePrlvt'}" value="@{conditTypePrlvt}">
                                <listcell label="@{conditTypePrlvt.type}"/>
                            </listitem>
                        </listbox>

                        <!-- Nombre de condit -->
                        <label value="${c:l('Champ.Prelevement.ConditNbr')}" sclass="formLabel"/>
                        <intbox id="nbConditBoxPrlvt"
                                width="50px"
                                value="@{fwinPrelevementEditBTO$composer.object.conditNbr,
							save-when='validate.onClick, create.onClick, next.onClick'}"
                                constraint="no negative"/>
                    </row>
                    <row spans="1, 3" visible="false">
                        <!-- Mileu de Condit -->
                        <label value="${c:l('Champ.Prelevement.ConditMilieu')}" sclass="formLabel"/>
                        <listbox id="conditMilieusBoxPrlvt" mold="select" rows="1"
                                 model="@{fwinPrelevementEditBTO$composer.conditMilieus}"
                                 selectedItem="@{fwinPrelevementEditBTO$composer.selectedConditMilieu}">
                            <listitem self="@{each='conditMilieuPrlvt'}" value="@{conditMilieuPrlvt}">
                                <listcell label="@{conditMilieuPrlvt.milieu}"/>
                            </listitem>
                        </listbox>
                    </row>

                    <!-- Consentement -->
                    <row spans="4" visible="false">
                        <vlayout>
                            <label value="${c:l('fichePrelevement.group.consentement')}" sclass="formSubTitle"/>
                            <image width="100%" height="1px" src="/images/pixelble.gif"
                                   style="background-repeat: repeat-x;"/>
                        </vlayout>
                    </row>
                    <row visible="false">
                        <!-- Date de consentement -->
                        <div visible="false">
                            <label value="${c:l('fichePrelevement.date.statut')}" sclass="formLabel"/>

                            <datebox id="dateConsentBoxPrlvt"
                                     format="${c:l('validation.date.format.simple')}"
                                     value="@{fwinPrelevementEditBTO$composer.object.consentDate,
									save-when='validate.onClick, create.onClick, next.onClick'}"
                                     lenient="false"/>
                        </div>
                        <!-- type de consentement -->
                        <div visible="false">
                            <hbox>
                                <label value="${c:l('Champ.Prelevement.ConsentType')}" sclass="formLabel"/>
                                <label id="requiredConsentTypePrlvt" value="*" sclass="requiredMark"/>
                            </hbox>
                            <hlayout>
                                <div id="typeUsedBulb" sclass="bulb" width="12px" height="12px"/>
                                <listbox id="consentTypesBoxPrlvt" mold="select" rows="1"
                                         model="@{fwinPrelevementEditBTO$composer.consentTypes}"
                                         selectedItem="@{fwinPrelevementEditBTO$composer.selectedConsentType}">
                                    <listitem self="@{each='consentTypePrlvt'}" value="@{consentTypePrlvt}">
                                        <listcell label="@{consentTypePrlvt.type}"/>
                                    </listitem>
                                </listbox>
                            </hlayout>
                        </div>
                    </row>
                </rows>
            </grid>
        </panelchildren>
        <toolbar height="100%" id="toolbarEchan" align="end">
            <hbox spacing="5" align="center">
                <button id="validate" label="${c:l('general.saveAndQuit')}" height="24px"
                        image="/images/icones/save.png" sclass="buttonv2"/>
                <button id="revert" label="${c:l('general.cancel')}" height="24px"
                        image="/images/icones/cancel.png" sclass="buttonv2"/>
                <button id="create" label="${c:l('general.createAndQuit')}" height="24px"
                        image="/images/icones/save.png" sclass="buttonv2"/>
                <button id="cancel" label="${c:l('general.cancel')}" height="24px"
                        image="/images/icones/cancel.png" sclass="buttonv2"/>
                <separator id="separator" width="67px" visible="false"/>
                <button id="next" height="24px"
                        image="/images/icones/next.png" label="${c:l('general.next')}" sclass="buttonv2"/>
            </hbox>
        </toolbar>
    </panel>
</window>