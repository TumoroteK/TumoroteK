<?xml  version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:task="http://www.springframework.org/schema/task"
 xmlns:util="http://www.springframework.org/schema/util"
 xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd">
 
	<bean id="expireAccountsScheduler" class="fr.aphp.tumorotek.schedule.ExpireAccountSchedulerImpl">
		<property name="utilisateurManager" ref="utilisateurManager" />
	 </bean>
	
	<task:scheduled-tasks>
		<task:scheduled ref="expireAccountsScheduler" method="expireAccounts" cron="1 1 0 * * *" />
	</task:scheduled-tasks>

</beans>